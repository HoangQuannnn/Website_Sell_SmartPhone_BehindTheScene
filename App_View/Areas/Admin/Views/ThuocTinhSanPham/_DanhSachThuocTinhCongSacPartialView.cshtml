@using System.Web
@model List<App_Data.ViewModels.ThuocTinh.ThuocTinhViewModel>
<style>
    thead {
        background: #0eabe7;
    }

        thead > tr > th {
            color: white !important;
        }
</style>
<div style="padding:20px">
    <div class="text-right mb-3">
        <button type="button" class="btn btn-success" onclick="ThemCongSac()">
            <i class="fas fa-plus"></i> Thêm Cổng Sạc
        </button>
    </div>
    <table id="data-table" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="text-center">STT</th>
                <th class="text-center">Mã</th>
                <th class="text-center">Loại Cổng Sạc</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-center">Biến thể liên quan</th>
                <th class="text-center">###</th>
            </tr>
        </thead>
        <tbody>
            @{
                var STT = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@(STT++)</td>
                    <td class="text-center">@item.Ma!.ToUpper()</td>
                    <td class="text-center">@item.LoaiCongSac!.ToUpper()</td>
                    <td class="text-center">@item.TrangThai</td>
                    <td class="text-center">@item.SoBienTheDangDung</td>
                    <td class="text-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-kio" onclick="Edit('@item.Id', '@Html.Raw(HttpUtility.JavaScriptStringEncode(item.LoaiCongSac))', '@item.SoBienTheDangDung')
">
                                <i class="far fa-edit"></i>
                            </button>
                            <button type="button" class="btn" style="background: red; color: #fff" onclick="Delete('@item.Id','@Html.Raw(HttpUtility.JavaScriptStringEncode(item.LoaiCongSac))','@item.SoBienTheDangDung')">
                                <i class="anticon anticon-delete"></i>
                            </button>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<script>
    function DrawCongSac() {
        $.ajax({
            url: '/admin/thuoctinhsanpham/LoadPartialViewDanhSachCongSac',
            type: 'GET',
            success: function (result) {
                content.empty().append(result);
            },
            error: function (xhr, status, error) {
                console.log(xhr.responseText);
                console.log(status);
                console.log(error);
                console.log(xhr);
            }
        });
    }
    $('#data-table').Datatable();
    function Delete(id, name, soBienTheDangDung) {
        if (soBienTheDangDung > 0) {
            Swal.fire({
                title: 'Xóa thất bại',
                text: `"${name}" đang được dùng cho ${soBienTheDangDung} biến thể.`,
                icon: 'info',
                confirmButtonText: 'OK'
            });
        } else {
            Swal.fire({
                title: 'Xác nhận',
                text: `Bạn có chắc chắn muốn xóa cổng sạc "${name}" không?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'OK',
                cancelButtonText: 'Hủy',
            }).then((result) => {
                if (result.isConfirmed) {

                    var data = {
                        IdCongSac: id,
                    };
                    $.ajax({
                        url: '/admin/thuoctinhsanpham/DeleteCongSac',
                        type: 'GET',
                        data: data,
                        success: function (result) {
                            if (result) {
                                DrawCongSac();
                                Swal.fire(
                                    'Thông báo',
                                    'Đã xóa thành công',
                                    'success'
                                );
                            }
                        },
                        error: function (xhr, status, error) {
                            console.log(xhr.responseText);
                            console.log(status);
                            console.log(error);
                            console.log(xhr);
                        }
                    });
                }
            });

        }
    }

    function Edit(id, name, soBienTheDangDung) {
        Swal.fire({
            title: 'Chỉnh sửa Cổng Sạc',
            input: 'text',
            inputValue: name,
            inputPlaceholder: 'Nhập giá trị',
            showCancelButton: true,
            confirmButtonText: 'Lưu',
            cancelButtonText: 'Hủy',
        }).then((result) => {
            if (result.isConfirmed) {
                const enteredValue = result.value;

                if (enteredValue !== '') {

                    Swal.fire({
                        title: 'Xác nhận',
                        text: `Bạn có chắc chắn muốn thay đổi Cổng Sạc, việc thay đổi Cổng Sạc sẽ làm cho Cổng Sạc của ${soBienTheDangDung} biến thể thay đổi theo?`,
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonText: 'OK',
                        cancelButtonText: 'Hủy',
                    }).then((result) => {
                        if (result.isConfirmed) {

                            var data = {
                                IdCongSac: id,
                                LoaiCongSac: enteredValue
                            };
                            $.ajax({
                                url: '/admin/thuoctinhsanpham/EditCongSac',
                                type: 'POST',
                                data: JSON.stringify(data),
                                contentType: 'application/json',
                                success: function (result) {
                                    if (result) {
                                        DrawChip();
                                        Swal.fire(
                                            'Thông báo!',
                                            'Cập nhật thành công!',
                                            'success'
                                        );
                                    } else {
                                        Swal.fire(
                                            'Thông báo',
                                            'Cập nhật thất bại!',
                                            'info'
                                        );
                                    }
                                },
                                error: function (xhr, status, error) {
                                    console.log(xhr.responseText);
                                    console.log(status);
                                    console.log(error);
                                    console.log(xhr);
                                }
                            });
                        }
                    });
                } else {
                    Swal.fire(
                        'Lỗi!',
                        'Vui lòng nhập giá trị.',
                        'error'
                    );
                }
            }
        });
    }
    function ThemCongSac() {
        Swal.fire({
            title: 'Thêm Cổng Sạc mới',
            html:
                '<input id="maCongSac" class="swal2-input" placeholder="Mã Cổng Sạc">' +
                '<input id="loaiCongSac" class="swal2-input" placeholder="Loại Cổng Sạc">' +
                '<div class="form-group">' +
                '    <label for="trangThai">Trạng thái:</label>' +
                '    <select class="form-control" id="trangThai">' +
                '        <option value="0">Hoạt động</option>' +
                '        <option value="1">Không hoạt động</option>' +
                '    </select>' +
                '</div>',
            showCancelButton: true,
            confirmButtonText: 'Thêm',
            cancelButtonText: 'Hủy',
            preConfirm: () => {
                const maCongSac = document.getElementById('maCongSac').value;
                const loaiCongSac = document.getElementById('loaiCongSac').value;
                const trangThai = document.getElementById('trangThai').value;
                return { loaiCongSac: loaiCongSac, trangThai: parseInt(trangThai) }; // Chuyển đổi giá trị sang kiểu số nguyên
            }
        }).then((result) => {
            if (result.isConfirmed) {
                const data = result.value;
                if (data.loaiCongSac !== '' && data.trangThai !== '' && data.maCongSac !== '') {
                    // Gửi dữ liệu thông qua AJAX để thêm Chip mới vào cơ sở dữ liệu
                    $.ajax({
                        url: '/admin/thuoctinhsanpham/CreateCongSac',
                        type: 'POST',
                        data: JSON.stringify(data),
                        contentType: 'application/json',
                        success: function (result) {
                            if (result) {
                                DrawCongSac();
                                Swal.fire(
                                    'Thông báo!',
                                    'Thêm Cổng Sạc mới thành công!',
                                    'success'
                                );
                            } else {
                                Swal.fire(
                                    'Thông báo',
                                    'Thêm Cổng Sạc mới thất bại!',
                                    'info'
                                );
                            }
                        },
                        error: function (xhr, status, error) {
                            console.log(xhr.responseText);
                            console.log(status);
                            console.log(error);
                            console.log(xhr);
                        }
                    });
                } else {
                    Swal.fire(
                        'Lỗi!',
                        'Vui lòng nhập đầy đủ thông tin.',
                        'error'
                    );
                }
            }
        });
    }
</script>
<script src="~/Admin/vendors/datatables/jquery.dataTables.min.js" defer></script>
<script src="~/Admin/vendors/datatables/dataTables.bootstrap.min.js" defer></script>
<script src="~/Admin/js/pages/datatables.js" defer></script>